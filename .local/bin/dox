#!/bin/bash

DMENU="dmenu -i -l 20 -p"
PDF_VIEWER="zathura"

main(){
  files="$(find "$HOME" -maxdepth 4 -iname "*.pdf")"
  choice=$( printf '%s\n' "${files[@]}" | \
        cut -d '/' -f4- | \
        sed -e 's/Documents/Docs/g' \
        -e 's/Downloads/Dwn/g' \
        -e 's/Pictures/Pix/g' \
        -e 's/Images/Img/g' \
        -e 's/.pdf//g' | \
        sort -g | \
      ${DMENU} "F!LE " "$@") || exit 1
  if [ "$choice" ]; then
      file=$( printf '%s' "$choice" | \
        sed -e 's/Docs/Documents/g' \
        -e 's/Dwn/Downloads/g' \
        -e 's/Pix/Pictures/g' \
        -e 's/Img/Images/g' \
  )
        "${PDF_VIEWER}" "$HOME/${file}.pdf"
  else
    echo "Program Terminated." && exit 0
  fi
}

[[ "${BASH_SOURCE[0]}" == "${0}" ]] && main "$@"
