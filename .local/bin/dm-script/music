#!/bin/sh

choice=$(printf "lofi\nclassic" | dmenu -i -p "Choose music î°›")

if [ "$choice" = "lofi" ]; then
  url="https://youtu.be/jfKfPfyJRdk"
  pkill -f $url || mpv "$url" --no-video
elif [ "$choice" = "classic" ]; then
  url="https://live.musopen.org:8085/streamvbr0"
  pkill -f "$url" || mpv "$url"
else
  :
fi
