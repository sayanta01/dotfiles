#!/bin/sh

if [ -n "$WAYLAND_DISPLAY" ]; then
	# file=$(find "$HOME" -type f | dmenu -i -l 20)
	file=$(fd -H -t f | dmenu -i -l 20)

	if [ -n "$file" ]; then
		curl -F "file=@$file" 0x0.st | wl-copy
		notify-send "0x0 "
	fi
else
	# file=$(find "$HOME" -type f | dmenu -i -l 20)
	file=$(fd -H -t f | dmenu -i -l 20)

	if [ -n "$file" ]; then
		curl -F "file=@$file" 0x0.st | xclip -sel c
		notify-send "0x0 "
	fi
fi
