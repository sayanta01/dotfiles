#!/bin/sh

# sudo xbps-install -Su
sudo xbps-install -Sy void-repo-nonfree void-repo-multilib void-repo-multilib-nonfree
sudo xbps-install -Sy base-devel linux-firmware vim zsh tmux xorg NetworkManager xfce4-plugins

cp -r ~/dotfiles/{.profile,.zprofile,.xprofile,.xinitrc,.imwheelrc,.vimrc} ~/
mkdir "$HOME/.local/bin"
cp -r ~/dotfiles/.local/bin/* ~/.local/bin && cp -r ~/dotfiles/.local/share/* ~/.local/share && cp -r ~/dotfiles/.config/. ~/.config
chmod -R +x ~/.config/bspwm/ ~/.config/polybar/launch.sh ~/.config/sxhkd/sxhkd.sh ~/.local/bin/ ~/.config/sxiv/ ~/.config/lf/{scope,cleaner}

mkdir ~/{desk,dox,dl,music,templates,pub,pix,vids,code,imp}

# Suckless
sudo xbps-install -Sy libXft-devel harfbuzz-devel libXinerama-devel
git clone https://github.com/LukeSmithxyz/st.git ~/dl/st
cd ~/dl/st && sudo make clean install

git clone https://github.com/LukeSmithxyz/dmenu.git ~/dl/dmenu
cd ~/dl/dmenu && sudo make clean install

# My nvim config
git clone https://github.com/sayanta01/nvim ~/.config/nvim

# Themes
git clone https://github.com/sayanta01/PapirusFlatMix ~/.local/share/icons/PapirusFlatMix
sudo cp -r ~/.local/share/icons/PapirusFlatMix/cursors /usr/share/icons/Adwaita
sudo cp -r ~/.local/share/icons/PapirusFlatMix /usr/share/icons
sudo cp -r ~/.local/share/themes/* /usr/share/themes

sudo xbps-install -Sy font-awesome \
	noto-fonts-ttf noto-fonts-emoji noto-fonts-cjk fonts-roboto-ttf terminus-font \
	exa bat tldr fd ripgrep procs duf dust man fzf bash-completion starship zoxide \
	mate-calc firefox qutebrowser meld \
	linux-headers neovim kitty newsboat trash-cli \
	neofetch htop cowsay libconfig gnome-keyring \
	bspwm polybar sxhkd rofi dunst libnotify \
	qt5ct qt6ct kvantum lxappearance xcape \
	playerctl pamixer pavucontrol mpd ncmpcpp python3-dbus \
	dialog cmake wmname imwheel pass \
	wireless_tools net-tools network-manager-applet bind-utils iftop nmap \
	mpv mediainfo exiftool ffmpegthumbnailer ImageMagick maim sxiv xwallpaper ffmpeg python3-pip pywal \
	unrar unzip zip p7zip tar engrampa \
	tree ncdu lf gvfs Thunar thunar-archive-plugin thunar-media-tags-plugin \
	zathura zathura-pdf-mupdf ghostscript \
	zsh-syntax-highlighting zsh-completions zsh-autosuggestions \
	rsync wget curl aria2 yt-dlp transmission jq \
	intel-ucode virtualbox-ose-guest powershell \
	xdg-utils xdg-user-dirs xdo xclip xdotool colorpicker wmctrl unclutter
# socat exfat-utils brightnessctl  - additional tools

# use PulseAudio
# sudo pacman -S pulseaudio pavucontrol pulsemixer
# use PipeWire
# sudo pacman -S pipewire wireplumber libspa-bluetooth

# Maple
mver="v6.3"
wget https://github.com/subframe7536/Maple-font/releases/download/$mver/MapleMono-NF.zip
yes | sudo unzip MapleMono-NF.zip -d /usr/share/fonts/TTF

# JetBrainsMono
jver="v2.3.3" # https://github.com/ryanoasis/nerd-fonts
wget https://github.com/ryanoasis/nerd-fonts/releases/download/$jver/JetBrainsMono.zip
yes | sudo unzip JetBrainsMono.zip -d /usr/share/fonts/TTF

# Nvidia
# sudo xbps-install -Sy nvidia nvidia-libs-32bit nvtop glmark2

# GUI apps
sudo xbps-install -Sy scrcpy android-tools stress bpytop blueman bluez ntfs-3g \
	obs audacity gimp inkscape virtualbox-ose kdeconnect blender telegram-desktop

# VM
sudo xbps-install -Sy qemu virt-manager bridge-utils dnsmasq openbsd-netcat swtpm libvirt cronie docker openssh
# ovmf

sudo xbps-install -Sy betterlockscreen xwinwrap \
	vscode anki simple-mtpfs cava

# xbps-src
git clone https://github.com/void-linux/void-packages ~/void-packages
cd ~/void-packages && ./xbps-src binary-bootstrap
echo XBPS_ALLOW_RESTRICTED=yes >~/void-packages/etc/conf

# Google-chrome
cd ~/void-packages && ./xbps-src pkg google-chrome
sudo xbps-install -y --repository=hostdir/binpkgs/nonfree google-chrome

# Picom
git clone https://github.com/ibhagwan/picom-ibhagwan-template ~/picom-ibhagwan
mv ~/picom-ibhagwan ~/void-packages/srcpkgs/picom-ibhagwan
cd ~/void-packages && ./xbps-src pkg picom-ibhagwan
sudo xbps-install -y --repository=hostdir/binpkgs picom-ibhagwan

# Change Teletype font
echo 'FONT="ter-d16b"' | sudo tee -a /etc/rc.conf
