#!/bin/sh

# chrome://flags - Search for 'ozone' and select auto

cp -r ~/dotfiles/.config/{hypr,waybar,swaylock,xsettingsd} ~/.config

sudo cat <<EOF | sudo tee /usr/share/xsessions/hyprland.desktop
[Desktop Entry]
Name=Hyprland
Comment=An intelligent dynamic tiling Wayland compositor
Exec=Hyprland
Type=Application
EOF

# AUR
paru -S waybar-hyprland xdg-desktop-portal-hyprland \
	hyprprop hyprpicker swaylock-effects wlr-randr \
	grim slurp swappy swww sddm-git \
  libsixel waypipe \
	hyprland-nvidia-git nvidia-dkms libva libva-nvidia-driver-git
# rofi-lbonn-wayland-git
# https://github.com/nyyManni/dmenu-wayland

