#!/bin/sh

## wsl --help

# wsl --install
# wsl --set-default-version 2
# wsl --status
# wsl --update
# wsl --list --online # install distro
# wsl -l -v # list distro
# wsl -t Ubuntu # terminate distro

sudo apt install -y wget curl x11-xserver-utils dbus-x11 xrdp xfce4 xfce4-goodies

# DE
sudo sed -i 's/3389/3390/g' /etc/xrdp/xrdp.ini
/etc/xrdp/startwm.sh # cmnt last 2 lines of Xsession & add `startxfce4` in bottom
sudo /etc/init.d/xrdp start
