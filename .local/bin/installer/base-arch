# enable efi                        # VM settings
# ls /sys/firmware/efi/efivars      # check uefi

#### connect wifi ####
iwctl
device list  # show adpater
station <adpater-name> scan 
station <adpater-name> get-networks    # show available networks
station <adpater-name> connect <network-name>

#### change tty font ####
pacman -Sy terminus-font
setfont /usr/share/kbd/consolefonts/ter-d16n.psf.gz

#### partition disk ####
cfdisk /dev/sda
sda1 boot 400M      # partition type EFI system
sda2 root           # give rest of space
# sda3 swap         - optional
write & quit

#### formating ####
mkfs.fat -F 32 /dev/sda1
mkfs.ext4 /dev/sda2
# mkswap /dev/sda3

#### mounting ####
mount /dev/sda2 /mnt
mkdir -p /mnt/boot/efi
mount /dev/sda1 /mnt/boot/efi
# swapon /dev/sda3

#### install base system ####
basestrap /mnt base base-devel linux linux-headers linux-firmware neovim tmux runit elogind-runit  [ Artix ]
 pacstrap -K /mnt base base-devel linux linux-headers linux-firmware neovim tmux  [ Arch ]

#### generate fstab ####
fstabgen -U /mnt >> /mnt/etc/fstab  [ Artix ]
 genfstab -U /mnt >> /mnt/etc/fstab  [ Arch ]

#### chroot ####
artix-chroot /mnt  [ Artix ]
 arch-chroot /mnt  [ Arch ]

vim /etc/pacman.conf                    # uncmnt ParallerDownloads
vim /etc/makepkg.conf                   # uncmnt MAKEFLAGS - more cores faster compile - put nm of threads of computer for faster compile

#### configure sys clock ####
ln -s /usr/share/zoneinfo/Asia/Kolkata /etc/localtime
hwclock --systohc
# date -s "1 JAN 2022 00:00:00"
timedatectl set-ntp true  [ Arch ]

#### set localization ####
vim /etc/locale.gen      # uncmnt US.UTF-8
locale-gen
echo LANG=en_US.UTF-8 > /etc/locale.conf
export LC_COLLATE="C"  [ Artix ] 

#### network configuration ####
echo LilWarmachine > /etc/hostname

vim /etc/hosts
127.0.0.1   localhost
::1         localhost
127.0.1.1   LilWarmachine.localdomain   LilWarmachine

pacman -S git dosfstools dhcpcd xorg networkmanager-runit  [ Artix ]
ln -s /etc/runit/sv/NetworkManager /run/runit/service  [ Artix after reboot ]

 pacman -S git dosfstools dhcpcd xorg networkmanager [ Arch ]
 systemctl enable NetworkManager  [ Arch  ]

#### install bootloader ####
pacman -S grub os-prober efibootmgr
grub-install --target=x86_64-efi --efi-directory=/boot/efi --bootloader-id=grub
grub-mkconfig -o /boot/grub/grub.cfg

passwd  # set root pswd
useradd -m -G wheel,storage,power `USER`
passwd `USER`

EDITOR=nvim visudo                       # uncmnt %wheel ALL=(ALL:ALL) ALL
exit - chroot environment
sudo reboot


#### Add Arch Repo for Artix ####
/etc/pacman.conf >> after [galaxy]
[universe]
Server = https://universe.artixlinux.org/$arch
Server = https://mirror1.artixlinux.org/universe/$arch
Server = https://mirror.pascalpuffke.de/artix-universe/$arch
Server = https://artixlinux.qontinuum.space/artixlinux/universe/os/$arch
Server = https://mirror1.cl.netactuate.com/artix/universe/$arch
Server = https://ftp.crifo.org/artix-universe/

sudo pacman -Sy artix-archlinux-support
# sudo pacman -S artix-keyring  [ fix corrupted pkg "PGP signature" ]
# sudo pacman-key --populate artix

/etc/pacman.conf >> in End
#### ARCH REPO ####
#[testing]
#Include = /etc/pacman.d/mirrorlist-arch

[extra]
Include = /etc/pacman.d/mirrorlist-arch

#[community-testing]
#Include = /etc/pacman.d/mirrorlist-arch

[community]
Include = /etc/pacman.d/mirrorlist-arch

#[multilib-testing]
#Include = /etc/pacman.d/mirrorlist-arch

[multilib]
Include = /etc/pacman.d/mirrorlist-arch

[core]
Include = /etc/pacman.d/mirrorlist-arch

sudo pacman-key --init
sudo pacman-key --populate archlinux
sudo pacman -Syyu
# sudo dbus-uuidgen | sudo tee /var/lib/dbus/machine-id    [ Artix ]
