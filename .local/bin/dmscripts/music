#!/bin/sh

menu=$(command -v dmenu >/dev/null && echo "dmenu -i" || echo "rofi -dmenu -i")
choice=$(printf "lofi\nclassic" | $menu -p "Choose Music:")

if [ "$choice" = "lofi" ]; then
  url="https://youtu.be/jfKfPfyJRdk"
  pkill -f $url || mpv "$url" --no-video
elif [ "$choice" = "classic" ]; then
  url="https://live.musopen.org:8085/streamvbr0"
  pkill -f "$url" || mpv "$url"
else
  :
fi
