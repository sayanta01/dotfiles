#!/bin/sh

action=$(printf "install Program\nremove Program" | fzf)

case $action in
"install Program")
	# xbps-query -Rs '' | fzf -i --exact --prompt="Select package to install:" | awk '{print $2}' | xargs -ro sudo xbps-install -S
	package=$(xbps-query -Rs '' | fzf -i --exact --prompt="Select package to install:" | awk '{print $2}')
	sudo xbps-install "$package"
	notify-send "ðŸ˜Ž $package is installed ðŸŽŠ "
	;;
"remove Program")
	package=$(xbps-query -m | fzf -i --exact --prompt="Select package to remove:")
	sudo xbps-remove -Rv "$package"
	notify-send "ðŸ˜ˆ $package is removed ðŸ˜¥"
	;;
*)
	notify-send "ðŸ˜• No Option Selected"
	;;
esac
