#!/bin/sh

case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "logout\n reboot\n shutdown\n display off\n lock" | dmenu -i -p 'Action: ')" in
	' logout') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
	' reboot') $ctl reboot ;;
	' shutdown') $ctl poweroff ;;
	' display off') xset dpms force off ;;
	' lock') slock ;;
	*) exit 1 ;;
esac
