#!/bin/sh

if [ -n "$WAYLAND_DISPLAY" ]; then
	if pgrep -x "wlsunset" >/dev/null; then
		killall wlsunset >/dev/null 2>&1
	else
		wlsunset -t 3700 >/dev/null 2>&1 &
	fi
else
	xsct -t 3700
fi

