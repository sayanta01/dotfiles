# enable efi                            #VM settings
# ls /sys/firmware/efi/efivars          #check uefi

fdisk /dev/sda                          #sel drive
n  1st partition  (Boot)                give +700M 
n  2nd partition  (Root)                give +24G  
n  3rd partition  (Home)                give rest of space
w  write partition 

mkfs.ext4 /dev/sda3
mkfs.ext4 /dev/sda2
mkfs.fat -F32 /dev/sda1

mount /dev/sda2 /mnt
mkdir /mnt/home 
mkdir /mnt/boot 
mount /dev/sda1 /mnt/boot
mount /dev/sda3 /mnt/home

basestrap /mnt linux runit elogind-runit linux-firmware ( on artix )
dosfstools mtools vim zsh base base-devel grub efibootmgr

pacstrap /mnt linux base base-devel grub zsh vim / ( on arch )
dosfstools mtools git networkmanager efibootmgr

fstabgen /mnt ( on artix )
genfstab -U /mnt >> /mnt/etc/fstab 

genfstab /mnt ( on arch )
genfstab -U /mnt >> /mnt/etc/fstab

artools-chroot ( on artix )
arch-chroot /mnt ( on arch )

ln -sf /usr/share/zoneinfo/Asia/Kolkata /etc/localtime      
hwclock --systohc
timedatectl set-ntp true

pacman -S networkmanager networkmanger-runit git fakeroot glibc ( on artix )
ln -s /etc/runit/sv/NetworkManager /etc/runit/runsvdir/current ( on artix before reboot )
ln -s /etc/runit/sv/NetworkManager /run/runit/service ( after reboot )

systemctl enable NetworkManager ( on arch )

vim /etc/locale.gen                     #uncmnt both US
locale-gen

echo LANG=en_US.UTF-8 > /etc/locale.conf 
echo LilWarmachine > /etc/hostname

vim /etc/hosts
127.0.0.1	localhost
::1		localhost
127.0.1.1	LilWarmachine.localdomain	LilWarmachine

grub-install --target=x86_64-efi --efi-directory=/boot --bootloader-id=grub
grub-mkconfig -o /boot/grub/grub.cfg

passwd  #set root pswd
useradd -m -G wheel,storage,power -s /bin/zsh bot

passwd bot
EDITOR=vim visudo                       #uncmnt %wheel ALL=(ALL:ALL) ALL

