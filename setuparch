#!/bin/sh

# pipewire-alsa pipewire-pulse pulseaudio-bluetooth  Install necessary fonts

ln -s /usr/share/zoneinfo/Asia/Kolkata /etc/localtime      
hwclock --systohc                                          


sudo pacman -Syu
sudo pacman -Sy --noconfirm cargo && cargo install ttyper
sudo pacman -Sy --noconfirm ttf-jetbrains-mono ttf-cascadia-code noto-fonts-emoji ttf-joypixels ttf-font-awesome \
linux-firmware linux-headers linux-lts linux-lts-headers linux-firmware \
thunar firefox ranger zathura \
neovim fzf translate-shell openssh wget curl mate-calc \
tree ncdu rsync unrar unzip zip p7zip tar \
dhcpcd networkmanager network-manager-applet wireless_tools dialog \
feh sxiv ffmpeg imagemagick lolcat \
cmatrix fortune-mod mpv pipewire \
speedtest-cli trash-cli youtube-dl transmission-cli \
bpytop neofetch htop alacritty \
tor torbrowser-launcher \
lightdm lightdm-gtk-greeter lightdm-gtk-greeter-settings intel-ucode \
virtualbox-guest-utils \
unclutter zsh-syntax-highlighting zsh-completions jq xdg-user-dirs xorg xclip

sudo systemctl enable NetworkManager
sudo systemctl enable lightdm 
sudo systemctl enable vboxservice

#
sudo pacman -Sy --noconfim nvidia nvidia-utils nvidia-settings opencl-nvidia os-prober \
scrcpy android-tools nvtop stress \
obs-studio audacity gimp kdeconnect blender \
deluge virtualbox telegram-desktop bleachbit \
bluez bluez-utils blueman ntfs-3g

sudo systemctl enable bluetooth
sudo systemctl enable fstrim.timer


git clone https://aur.archlinux.org/yay.git ~/yay && makepkg -si
yay -Sy --noconfirm preload polybar spotify-adblock chrome-google visual-studio-code putty stacer 

mkdir ~/{Desktop,Documents,Downloads,Music,Pictures,Videos} 
mkdir ~/Documents/{Python,JavaScript,C}

sudo cp -r ~/.themes/* /usr/share/themes
sudo cp -r ~/.icons/MineKali /usr/share/icons
sudo cp -r ~/.icons/MineKali/cursors /usr/share/icons/Adwaita

git clone https://github.com/sayanta01/nvim.git ~/.config/nvim
nvim +'hi NormalFloat guibg=#1e222a' +PackerSync

#
sudo pacman -Sy docker
sudo systemctl disable docker.service

sudo cat <<EOF | sudo tee /etc/resolv.conf 
# Generated by NetworkManager
nameserver 1.1.1.1
nameserver 8.8.8.8
EOF

wget -O PacketTracer.deb https://archive.org/download/packet-tracer-800-build-212-mac-notarized/PacketTracer_800_amd64_build212_final.deb
chmod +x PacketTracer.deb && sudo dpkg -i PacketTracer.deb

