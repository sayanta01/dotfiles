#!/bin/sh

 
#pactl pipewire-alsa pulsemixer xf86-video-vmware network-manager-applet

ln -s /usr/share/zoneinfo/Asia/Kolkata /etc/localtime       #set zone time
hwclock --systohc                                           #set hardware clock


sudo pacman -Syu
sudo pacman -Sy cargo && cargo install ttyper
sudo pacman -Sy ttf-jetbrains-mono ttf-cascadia-code noto-fonts-emoji ttf-joypixels ttf-font-awesome \
linux-headers linux-lts linux-lts-headers linux-firmware python-pip dbus-python \
thunar firefox ranger zathura \
neovim fzf translate-shell openssh wget curl \
tree ncdu rsync unrar unzip zip p7zip tar \
dhcpcd networkmanager wireless_tools dialog \
feh sxiv ffmpeg imagemagick lolcat \
cmatrix fortune-mod mpv pipewire pipewire-pulse \
speedtest-cli trash-cli youtube-dl transmission-cli \
bpytop neofetch htop alacritty \
tor torbrowser-launcher \
lightdm lightdm-gtk-greeter lightdm-gtk-greeter-settings intel-ucode \
virtualbox-guest-utils \
unclutter zsh-syntax-highlighting zsh-completions jq slock xdg-user-dirs xorg xclip

sudo systemctl enable NetworkManager
sudo systemctl enable lightdm 
sudo systemctl enable vboxservice

#
sudo pacman -Sy nvidia nvidia-utils nvidia-settings opencl-nvidia os-prober \
scrcpy android-tools nvtop stress \
obs-studio audacity gimp kdeconnect blender \
deluge virtualbox telegram-desktop bleachbit spotify \
bluez bluez-utils blueman pulseaudio-bluetooth ntfs-3g

sudo systemctl enable bluetooth
sudo systemctl enable fstrim.timer


git clone https://aur.archlinux.org/yay.git ~/yay
#yay -S --noconfirm --needed preload chrome-google visual-studio-code putty stacer polybar

mkdir ~/{Desktop,Documents,Downloads,Music,Pictures,Videos} 
mkdir ~/Documents/{Python,JavaScript,C}

sudo cp -r ~/.themes/* /usr/share/themes
sudo cp -r ~/.icons/MineKali /usr/share/icons
sudo cp -r ~/.icons/MineKali/cursors /usr/share/icons/Adwaita

git clone https://github.com/sayanta01/nvim.git ~/.config/nvim
nvim +'hi NormalFloat guibg=#1e222a' +PackerSync

#
sudo pacman -Sy docker
sudo systemctl disable docker.service

sudo cat <<EOF | sudo tee /etc/resolv.conf 
# Generated by NetworkManager
nameserver 1.1.1.1
nameserver 8.8.8.8
EOF

git clone https://github.com/abba23/spotify-adblock.git && cd spotify-adblock
make && sudo make install
touch ~/.local/share/applications/spotify-adblock.desktop
chown $USER spotify-adblock.desktop
cat > spotify-adblock.desktop <<EOF
[Desktop Entry]
Type=Application
Name=Spotify (adblock)
GenericName=Music Player
Icon=spotify-client
TryExec=spotify
Exec=env LD_PRELOAD=/usr/local/lib/spotify-adblock.so spotify %U
Terminal=false
MimeType=x-scheme-handler/spotify;
Categories=Audio;Music;Player;AudioVideo;
StartupWMClass=spotify
EOF

wget -O PacketTracer.deb https://archive.org/download/packet-tracer-800-build-212-mac-notarized/PacketTracer_800_amd64_build212_final.deb
chmod +x PacketTracer.deb && sudo dpkg -i PacketTracer.deb

