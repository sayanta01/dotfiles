#!/bin/bash


sudo apt install -y bspwm polybar pip rofi kitty pip

git clone https://github.com/sayanta01/dotfiles ~/Desktop/dotfiles
cd ~/Desktop/dotfiles && cp -fr .zshrc .fonts .xinitrc ~/
sudo cp -r ~/Desktop/dotfiles/.config/* ~/.config
sudo chmod +x ~/.config/bspwm/bspwmrc 
sudo chmod +x ~/.config/polybar/launch.sh
sudo chmod +x ~/.config/polybar/scripts/* 

sudo apt install -y pulsemixer alsa-utils playerctl nitrogen lxappearance scrot
sudo apt install -y libxft-dev libharfbuzz-bin librust-harfbuzz-rs-dev libxinerama-dev

cd ~/Desktop/dotfiles/.config/st
sudo make clean install
bash STcolor

cd ~/.config/dmenu
sudo make clean install