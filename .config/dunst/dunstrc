# Dunst configuration
[global]
    follow = mouse
    frame_width = 2
    font = Monospace 10
    alignment = center
    close_all = ctrl+shift+space
    history = ctrl+shift+grave
    mouse_left_click = close_current
    mouse_right_click = close_all

[urgency_low]
    background = "#222222"
    foreground = "#888888"
    timeout = 3

[urgency_normal]
    background = "#313244"
    foreground = "#ffffff"
    timeout = 5
    override_pause_level = 30

[urgency_critical]
    background = "#900000"
    foreground = "#ffffff"
    frame_color = "#ff0000"
    timeout = 10
    override_pause_level = 60
