#!/bin/bash

bspc monitor -d   ﮊ  󰹂    󱞐  

bspc config border_width             1
bspc config window_gap               0
bspc config split_ratio              0.50
bspc config pointer_motion_interval  16

bspc config borderless_monocle       true
bspc config focus_follows_pointer    true
#bspc config gapless_monocle         true
bspc config pointer_modifier         mod1
bspc config focused_border_color     "#434C5E" 

#bspc rule -a mpv state=fullscreen
bspc rule -a Zathura state=tiled
bspc rule -a Inkscape state=floating 
bspc rule -a Gimp state=floating 
bspc rule -a Onboard state=floating 
bspc rule -a Yad state=floating 
bspc rule -a Screenkey manage=off
bspc rule -a TelegramDesktop desktop='^6'
bspc rule -a Lxappearance state=floating center=on
bspc rule -a qt5ct state=floating center=on
bspc rule -a Pavucontrol state=floating center=on


#Autostart
pgrep -x sxhkd > /dev/null || sxhkd &
xsetroot -cursor_name left_ptr &
./.config/polybar/launch.sh &
xset r rate 290 50 &
kdeconnect-indicator &
xwallpaper --zoom ~/.local/share/walls/wallpaper.jpg &
xrdb ~/.config/x11/xresources &

#killall -q "imwheel" &
#imwheel -b 45 &
#imwheel -b "4 5" &
#wmname LG33D &

