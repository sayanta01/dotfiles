#!/bin/bash

bspc monitor -d I II III IV V VI VII VIII IX X

bspc config border_width 1
bspc config window_gap 6
bspc config top_padding 29
bspc config pointer_motion_interval 16

bspc config split_ratio 0.48
bspc config borderless_monocle true
# bspc config gapless_monocle true
bspc config focus_follows_pointer true
bspc config pointer_modifier mod1

# Pywal
# . "${HOME}/.cache/wal/colors.sh"
# bspc config focused_border_color "$color7"
bspc config focused_border_color "#f8f8f2" # cmt this to use pywal
bspc config normal_border_color "#040303"
bspc config presel_feedback_color "#44475A"

bspc rule -a Screenkey manage=off
bspc rule -a Gimp state=floating
bspc rule -a Inkscape state=floating
bspc rule -a Spotify desktop='^9'
bspc rule -a TelegramDesktop desktop='^6'
bspc rule -a Lxappearance state=floating center=on
bspc rule -a Nm-connection-editor state=floating center=on
bspc rule -a Pavucontrol state=floating center=on
bspc rule -a Blueman-manager state=floating center=on
bspc rule -a scpad locked=on sticky=on state=floating rectangle=900x400+500+32 

# Autostart
pgrep -x sxhkd > /dev/null || sxhkd -c "$HOME/.config/bspwm/sxhkd" &
xsetroot -cursor_name left_ptr &
./.config/polybar/launch.sh &
xset r rate 280 60 &
xwallpaper --zoom ~/.local/share/walls/wallpaper.jpg &
# xcape -e 'super_l=alt_l|0' &
# kdeconnect-indicator &
