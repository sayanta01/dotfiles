[colors]
background = #000
background-alt = #444
foreground-alt = #636360
foreground = #FFF
primary = #50FA7B
secondary = #E60053
alert = #BD2C40


[bar/example]
width = 100%
height = 26
fixed-center = true
;monitor = "HDMI-0"


line-size = 3
padding-left = 0
padding-right = 1
module-margin-left = 0
module-margin-right = 1

font-0 = JetBrainsMono Nerd Font:style=Bold:pixelsize=11;3
font-1 = Material Design Icons:size=12;3
font-2 = Noto ColorEmoji:fontformat=truetype:scale=9:size=2;2
font-3 = Unifont:fontformat=truetype:size=9;3

wm-restack = bspwm
modules-left = bspwm xwindow spotify
modules-right = date nettraf pulseaudio cpu memory uptime temperature filesystem

tray-position = right 
cursor-click = pointer
cursor-scroll = ns-resize
screenchange-reload = true


################  MODULES ################


[module/nettraf]  
type = custom/script  
exec = "~/.config/scripts/nettraf"  
format-foreground = #B175EC


[module/spotify]
type = custom/script  
exec = "~/.config/scripts/spotify"
format-prefix = " "
format-foreground = #F1FA8C


[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%
format-foreground = #CE93F9


[module/bspwm]
type = internal/bspwm
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-urgent-background = ${colors.alert}
label-empty-foreground = ${colors.foreground-alt}
label-focused-padding = 1
label-occupied-padding = 1
label-urgent-padding = 1
label-empty-padding = 1


[module/date]
type = internal/date
interval = 1
date = " %a %d, 󱑅 %I:%M:%S "
date-alt = " %B, %p "
format-foreground = #EEF


[module/cpu]
type = internal/cpu
interval = 2
label = " 󰍛%percentage% "
format-foreground = #3CC9FC


[module/filesystem]
type = internal/fs
interval = 30
mount-0 = /
label-mounted = "  %free%"
label-mounted-foreground = #CE93f9


[module/memory]
type = internal/memory
interval = 2
format-foreground = #EDB96C
label = 󰘚%gb_used%


[module/uptime]
type = custom/script
exec = uptime --pretty | sed 's/up //' | sed 's/\ years\?,/y/' | sed 's/\ weeks\?,/w/' | sed 's/\ days\?,/d/' | sed 's/\ hours\?,\?/h/' | sed 's/\ minutes\?/m/'
interval = 99
format-prefix = "  "
format-foreground = #CAFAFE


[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>
ramp-volume-foreground = #50FA7D
label-volume-foreground = #DDE
use-ui-max = false
label-muted = "  0"
label-muted-foreground = #666
label-volume = %percentage%
ramp-volume-0 = " "
ramp-volume-1 = " "
ramp-volume-2 = " "
click-right = pavucontrol &


#[module/powermenu]
#type = custom/menu
expand-right = true
format-spacing = 2
label-open = " %{A}"
label-close = 
menu-0-0 = ""
menu-0-0-exec = reboot
menu-0-1 = ""
menu-0-1-exec = poweroff
format-foreground = #DD0004


[module/temperature]
type = internal/temperature
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input
warn-temperature = 70
format = <ramp> <label>
format-warn = <label-warn>
label = %temperature-c%
label-foreground = #50FA7B
label-warn = "  %temperature-c%"
label-warn-foreground = #f00
ramp-0 = " "
ramp-foreground = #fc4949

