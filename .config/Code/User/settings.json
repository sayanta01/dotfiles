{
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  // Material Design Icons
  "editor.fontLigatures": true,
  "editor.fontSize": 18,
  // "editor.fontWeight": "bold",
  "terminal.integrated.fontSize": 17,
  // "terminal.integrated.fontWeight": "bold"
  "workbench.editor.highlightModifiedTabs": true,
  "breadcrumbs.enabled": false,
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "search.sortOrder": "type",
  "editor.rename.enablePreview": false,
  "search.searchOnType": false,
  "terminal.integrated.gpuAcceleration": "on",
  "editor.bracketPairColorization.enabled": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "GitHub Dark Default",
  "editor.linkedEditing": true,
  "[python]": {
    "editor.formatOnType": true
  },
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.sneak": true,
  // "vim.easymotionMarkerooundColor": "#020202",
  "vim.normalModeKeyBindings": [
    // buffer
    {
      "before": ["<S-l>"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<S-h>"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["<S-b>"],
      "commands": [":enew"]
    },
    // basic
    {
      "before": ["<leader>", "/"],
      "commands": ["editor.action.commentLine"]
    },
    {
      "before": ["<leader>", "w"],
      "commands": [":w!"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": [":q!"]
    },
    {
      "before": ["<leader>", "h"],
      "commands": [":nohl"]
    },
    {
      "before": ["<leader>", "z"],
      "commands": ["workbench.action.toggleZenMode"]
    },
    // LSP
    {
      "before": ["l", "d"],
      "commands": ["editor.action.revealDefinition"]
      // "commands": ["editor.action.peekDefinition"]
    },
    {
      "before": ["<S-k>"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["g", "l"],
      "commands": ["errorLens.toggle"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prevInFiles"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.nextInFiles"]
    },
    {
      "before": ["l", "t"],
      "commands": ["editor.action.goToTypeDefinition"]
      // "commands": ["editor.action.peekTypeDefinition"]
    },
    {
      "before": ["<leader>", "l", "r"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["<leader>", "l", "f"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["<leader>", "l", "a"],
      "commands": ["editor.action.codeAction"]
    },
    {
      "before": ["<leader>", "l", "q"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<leader>", "l", "i"],
      "commands": ["editor.showIncomingCalls"]
    },
    {
      "before": ["<leader>", "l", "o"],
      "commands": ["editor.showOutgoingCalls"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "v"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "s"],
      "commands": ["workbench.action.splitEditorDown"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["C-e"],
      "after": ["_"]
    },
    {
      "before": ["C-b"],
      "after": ["$"]
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    // VS Code new marker @ next occurence
    "<C-d>": false,
    // Cut
    "<C-x>": false,
    // Copy
    "<C-c>": false,
    // Paste
    "<C-v>": false,
    "<C-z>": false,
    "<C-y>": false
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.renderWhitespace": "none",
  "errorLens.enabled": false,
  "git.openRepositoryInParentFolders": "never",
  "editor.scrollbar.vertical": "hidden",
  "window.menuBarVisibility": "toggle",
  "editor.cursorBlinking": "solid"
}
