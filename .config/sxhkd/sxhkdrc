#
# wm independent hotkeys
#

# brightness control
XF86MonBrightness{Up,Down}
	             xbacklight{ --inc 10, --dec 10}
	
# volume control 
XF86AudioRaiseVolume
              pamixer -i 5
              # amixer set Master 5%+
              # pactl set-sink-volume @DEFAULT_SINK@ +5%

XF86AudioLowerVolume
              pamixer -d 5 
              # amixer set Master 5%-
              # pactl set-sink-volume @DEFAULT_SINK@ -5%

XF86AudioMute
         pamixer -t
         # amixer set Master toggle
         # pactl set-sink-mute @DEFAULT_SINK@ toggle

# mic control
XF86AudioMicMute
            pactl set-source-mute @DEFAULT_SOURCE@ toggle

# media player control 
XF86Audio{Prev,Next}
         playerctl {previous,next}

XF86AudioPlay 
         playerctl play-pause

# switch layout
# super + n
        # ~/.local/bin/bspwm/layout
        ## bsp-layout next --layouts tall,tiled

# hide unhide bar
super + u
        ~/.local/bin/statusbar/toggle-polybar
        # polybar-msg cmd toggle | bspc config top_padding 0

# hide all windows
super + d
        while bspc node any.hidden.window -g hidden=off; do false; done && while bspc node 'any.!hidden.window' -g hidden=on; do :; done

