# spotify play pause
alt + F7
      dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause

# next
alt + F8
      playerctl next
       
# wifi
alt + F9
      bash ~/.local/bin/wifi             
        
# screenshot
Print
    maim | tee ~/pix/$(date +%I:%M:%d,%a)-Ful.png | xclip -sel c -t image/png | notify-send -t 800 "Screenshot Taken "
                 
# ss select   
shift + Print            
            maim -s | tee ~/pix/$(date +%I:%M:%d,%a)-Sel.png | xclip -sel c -t image/png | notify-send -t 800 "Selected Screenshot " 

# ss window
alt + Print 
	        maim -i $(xdotool getactivewindow) ~/pix/$(date +%I:%M:%d,%a)-Win.png | notify-send -t 800 "Window Screenshot Taken"
	                           
