# play, pause   
super + F7
        playerctl play-pause
  
# spotify play pause
alt + F7
      dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause

# next
alt + F8
      playerctl next
       
# wifi
alt + F9
      ~/.local/bin/dm-script/wifi             

# screenshot
Print
    maim | tee $(xdg-user-dir PICTURES)/$(date +%I:%Mî˜¡%b_%d)-Ful.png | xclip -sel c -t image/png | notify-send -t 800 "Screenshot Taken ðŸ“Ž"
                 
# ss select   
shift + Print            
        maim -s | tee $(xdg-user-dir PICTURES)/$(date +%I:%Mî˜¡%b_%d)-Sel.png | xclip -sel c -t image/png | notify-send -t 800 "Selected Screenshot ðŸ“Ž" 

# ss window
alt + Print 
	    maim -i $(xdotool getactivewindow) $(xdg-user-dir PICTURES)/$(date +%I:%Mî˜¡%b_%d)-Win.png | notify-send -t 800 "Window Screenshot Taken"
	                           
